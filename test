// Define a function to create a series of animations
function createElaborateAnimations() {
    const style = document.createElement('style');
    style.textContent = `
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        @keyframes moveRight {
            from { transform: translateX(0); }
            to { transform: translateX(100px); }
        }
        @keyframes moveDown {
            from { transform: translateY(0); }
            to { transform: translateY(100px); }
        }
        @keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
        div {
            animation: fadeIn 2s ease-in-out, moveRight 2s 2s ease-in-out, moveDown 2s 4s ease-in-out, rotate 2s 6s linear;
        }
    `;
    document.head.appendChild(style);
}

// Define a function to create a greeting message
function createGreeting(name) {
    return `Hello, ${name}! Welcome to the most elaborate "Hello, World!" program ever written.`;
}

// Define a function to display the greeting message
function displayGreeting(message) {
    // Create a new div element
    const greetingDiv = document.createElement('div');
    
    // Set the text content of the div to the greeting message
    greetingDiv.textContent = message;
    
    // Style the div
    greetingDiv.style.fontFamily = 'Arial, sans-serif';
    greetingDiv.style.fontSize = '24px';
    greetingDiv.style.color = '#4CAF50';
    greetingDiv.style.textAlign = 'center';
    greetingDiv.style.marginTop = '20%';
    
    // Append the div to the body
    document.body.appendChild(greetingDiv);
}

// Define a function to add some animations to the greeting message
function addAnimations() {
    const style = document.createElement('style');
    style.textContent = `
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        div {
            animation: fadeIn 2s ease-in-out;
        }
    `;
    document.head.appendChild(style);
}

// Main function to run the program
function main() {
    const name = 'World';
    const greetingMessage = createGreeting(name);
    displayGreeting(greetingMessage);
    addAnimations();
    createElaborateAnimations();
}

// Run the main function when the window loads
window.onload = main;
